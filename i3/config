# i3bar
bar {
   status_command i3blocks
   #font pango: BitcountGridSingle Light 11
   #font pango: BitcountGridSingle Light 11
   #font pango: BitcountGridSingle_Roman Light 11
   font pango: Exo Bold 14
   #font pango: Exo Regular 10
   #font pango: Syncopate Regular 10
   #font pango: MesloLGS Regular 10 
   position top
   
   colors {
#       background         #cf4b50          #$bg_dark         # dark coffee (bar background)
#       background         #250001          #$bg_dark         # dark coffee (bar background)
        background         #1c0921          #$bg_dark         # dark coffee (bar background)
        #234d70
        statusline         $text_active     # light pastel (text)
        separator          $text_active     # separator color

        focused_workspace       $bg_dark    #ffffff     $bg_dark            # border block text 
        active_workspace        $bg_dark    $bg_dark    $text_dull          # border block text 
        inactive_workspace      $bg_dark    $bg_block   $text_dull          # border block text 
        #inactive_workspace     #000000     #005f1f     #ffffff             # border block text 
        urgent_workspace        #2f343a     $bg_dark    $accent_blue        # border block text 
   }
   mode dock
}

